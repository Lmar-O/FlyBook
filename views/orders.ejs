<!doctype html>
<html>
<head>
<meta charset="UTF-8">
<title>UI E-Commerce Website - Shop</title>
<link rel="stylesheet" href="/styles/bootstrap.css">
<link rel="stylesheet" type="text/css" href="/styles/styles.css">
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <div class="page-title">
        <h1>Orders</h1>
    </div>
    <hr />

    <% if(data.length == null || data.length < 1) { %>
        <p>No orders have been found</p>
    <% } else { %>
    <div class="orders-container">  
    <% data.forEach((order) => { %>
        <div class="order-card">
            <p><span style="font-weight: bold;">Transaction ID:</span> <%= order.id %></p>
            <p><span style="font-weight: bold;">Total:</span> $<%= order.total %></p>
            <p><span style="font-weight: bold;">Date of Transaction: </span><%= order.date %></p>
        </div>

    <% })} %>
    </div>
</body>
</html>